# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1  # 可选，如果使用代理或自定义端点

# 文心一言API配置
ZHIPU_API_KEY=your_zhipu_api_key_here

# DeepSeek API配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_BASE=https://api.deepseek.com/v1  # 可选，如果使用代理或自定义端点

# 讯飞星火API配置
SPARK_APP_ID=your_spark_app_id_here
SPARK_API_KEY=your_spark_api_key_here
SPARK_API_SECRET=your_spark_api_secret_here

# 火山引擎API配置
VOLCENGINE_API_KEY=your_volcengine_api_key_here
VOLCENGINE_API_BASE=https://open.volcengineapi.com  # 可选，如果使用代理或自定义端点

# Google Gemini API配置
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_BASE=https://generativelanguage.googleapis.com  # 可选，如果使用代理或自定义端点

# Ollama配置
OLLAMA_BASE_URL=http://localhost:11434  # Ollama服务地址
OLLAMA_MODEL=llama2  # 默认Ollama模型

# 模型配置
DEFAULT_MODEL=gpt-3.5-turbo  # 默认使用的模型
EMBEDDING_MODEL=text-embedding-ada-002  # 用于嵌入的模型

# RAG配置
VECTOR_DB_PATH=./data/vector_db  # 向量数据库存储路径
CHUNK_SIZE=1000  # 文档分块大小
CHUNK_OVERLAP=200  # 文档分块重叠大小

# 嵌入模型配置
EMBEDDING_MODEL=text-embedding-ada-002  # OpenAI嵌入模型
USE_LOCAL_EMBEDDINGS=false  # 是否使用本地嵌入模型
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2  # 本地Hugging Face嵌入模型
DEEPSEEK_EMBEDDING_MODEL=deepseek-embeddings  # DeepSeek嵌入模型

# 应用配置
DEBUG=false  # 调试模式
MAX_HISTORY_LENGTH=10  # 默认记忆的最大对话轮数